/* pages/menu/me/me.wxss */

.user-card {
  box-shadow: 0 0 15rpx 0 rgba(0, 0, 0, 0.1);
  position: relative;
  padding-top: 200rpx;
  background-size: contain;
  z-index: 0;
  margin-bottom: 30rpx;
}

.user-card__bg {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  width: 100%;
  height: 268rpx;
  z-index: -1;
}

.user-card__info {
  display: flex;
  flex-direction: row;
}

.user-card__headAndTag {
  position: relative;
  display: block;
  margin-left: 7%;
  margin-right: 30rpx;
}

.user-card__head {
  overflow: hidden;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 1px solid #b7b1a5;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.user-card__name {
  padding-top: 79rpx;
}

.user-card__links {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #ccc;
}

.user-card__linkItem {
  flex: 1;
  text-align: center;
  border-right: 1px dotted #ccc;
  padding: 5rpx 0;
}

.user-card__linkItem:last-child {
  border-right: none;
}

.user-card__linkValue {
  padding-left: 15rpx;
}

.charts-card {
  margin-bottom: 50rpx;
}

.charts-card__header {
  display: block;
  border-left: 8rpx solid #b7b1a5;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.charts-card__body {
  display: block;
  width: 100%;
  height: 370rpx;
  padding: 20rpx;
}
