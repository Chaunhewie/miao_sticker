<!--pages/about/home/home.wxml-->
<scroll-view scroll-y class="scrollPage">
  <view class="UCenter-bg bg-molan07">
    <image src="/assets/img/MiaoLogo.png" class="png" mode="widthFix"></image>
    <view class="text-xl">喵贴
      <text class="text-df">v1.0</text>
    </view>
    <view class="margin-top-sm">
      <text>By:孙迪&田昌昊</text>
    </view>
    <image src="/assets/img/wave.gif" mode="scaleToFill" class="gif-wave"></image>
  </view>
  <view class="padding flex text-center bg-nearlyWhite shadow-warp">
    <view class="flex flex-sub flex-direction solid-right">
      <view class="text-xxl text-BGPBlue">{{visitTotal}}</view>
      <view class="margin-top-sm">
        <text class="cuIcon-attentionfill"></text> View</view>
    </view>
    <view class="flex flex-sub flex-direction solid-right">
      <view class="text-xxl text-bergundy">{{starCount}}</view>
      <view class="margin-top-sm">
        <text class="cuIcon-favorfill"></text> Star</view>
    </view>
    <view class="flex flex-sub flex-direction">
      <view class="text-xxl text-green text-BGPBkGd">{{forksCount}}</view>
      <view class="margin-top-sm">
        <text class="cuIcon-fork"></text> Fork</view>
    </view>
  </view>
  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
    <view class="cu-item arrow bg-molan10">
      <view class="content" bindtap="CopyLink" data-link="https://github.com/Chaunhewie/miao_sticker">
        <text class="cuIcon-github text-molan02"></text>
        <text class="text-grey">GitHub</text>
      </view>
    </view>
    <view class="cu-item arrow bg-molan10">
      <navigator class="content" url="/pages/about/about/about" hover-class="none">
        <image src="/assets/img/MiaoLogo.png" class="png" mode="aspectFit"></image>
        <text class="text-grey">关于喵贴</text>
      </navigator>
    </view>
    <view class="cu-item arrow bg-molan10">
      <navigator class="content" url="/pages/about/log/log" hover-class="none">
        <text class="cuIcon-formfill text-molan12"></text>
        <text class="text-grey">日志</text>
      </navigator>
    </view>
    <view class="cu-item arrow bg-molan10">
      <view class="content" bindtap="showQrcode">
        <text class="cuIcon-appreciatefill text-red"></text>
        <text class="text-grey">赞赏支持</text>
      </view>
    </view>
    <view class="cu-item arrow bg-molan10">
      <button class="cu-btn content" open-type="feedback">
        <text class="cuIcon-writefill text-brown"></text>
        <text class="text-grey">意见反馈</text>
      </button>
    </view>
  </view>
  <view class="cu-tabbar-height"></view>
</scroll-view>