/* pages/index/index.wxss */

.UCenter-bg {
  background-size: 100% 100%;
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: absolute;
  flex-direction: column;
  align-items: center;
  font-weight: 500;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}
